<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#CC111111"
            app:cardCornerRadius="16dp"
            app:strokeColor="#3300ffcc"
            app:strokeWidth="1dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/fidelityStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="FIDELITY LOCK: ENGAGED"
                android:textColor="#00ffcc"
                android:textStyle="bold"
                android:textSize="11sp"
                android:letterSpacing="0.1"/>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/galleryBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#222"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"
                app:strokeColor="#00ffcc"
                app:strokeWidth="1dp"
                android:padding="2dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/captureBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                app:fabCustomSize="88dp"
                android:src="@drawable/ic_shutter"
                app:backgroundTint="#00ffcc"
                app:tint="#000000"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/modeSwitch"
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:icon="@drawable/ic_video"
                app:iconTint="#00ffcc"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"
                android:backgroundTint="#222"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
